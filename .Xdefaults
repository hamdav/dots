! green
*color2: #8ea01f

! bright_green
*color10: #b2aa41

! yellow
*color3: #d7a01a

! bright_yellow
*color11: #e2aa3d

! blue
*color4: #935268

! bright_blue
*color12: #b57672

! magenta
*color5: #dc5262

! bright_magenta
*color13: #e6766e

! cyan
*color6: #8e9a68

! bright_cyan
