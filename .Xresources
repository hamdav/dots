! red
*color1: #b00000
*color9: #ff0000
! green
*color2: #00b000
*color10: #00ff00
! yellow
*color3: #b0b000
*color11: #ffff00
! blue
*color4: #0000b0
*color12: #0000ff
! magenta
*color5: #b000b0
*color13: #ff00ff
! cyan
*color6: #00b0b0
*color14: #00ffff
! white
*color7: #c0c0c0
*color15: #ffffff

! Fake transparency
!URxvt*transparent: 	true
!URxvt*shading:		30

!! URxvt Appearance
URxvt.font: xft:mononoki,xft:FreeSerif monospacified for mononoki
!URxvt.letterSpace: 0
!URxvt.lineSpace: 0
URxvt.internalBorder: 0
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 4092
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
! URxvt.iso14755: false

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! fix scrolling while in a secondary screen (like in less). otherwise it just scrolls up the terminal I think
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! selection-to-clipboard copies selected text to system clipboard. 
URxvt.perl-ext-common: default,matcher,selection-to-clipboard
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

